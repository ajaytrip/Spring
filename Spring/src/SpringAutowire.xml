<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="triangle" class="com.ajay.spring.Triangle" autowire="byName" scope="singleton">
	</bean>

	<!--  bean id="triangle" class="com.ajay.spring.Triangle" autowire="byName" scope="prototype">
	</bean -->

	<bean id="point1" class="com.ajay.spring.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="point2" class="com.ajay.spring.Point">
		<property name="x" value="1" />
		<property name="y" value="1" />
	</bean>

	<bean id="point3" class="com.ajay.spring.Point">
		<property name="x" value="2" />
		<property name="y" value="2" />
	</bean>
</beans>